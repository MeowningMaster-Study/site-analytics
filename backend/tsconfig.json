{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "#root/*": [
                "./*"
            ],
        },
        "incremental": true,
        "tsBuildInfoFile": "./dist/tsbuildinfo"
    },
    "include": [
        "src"
    ]
}